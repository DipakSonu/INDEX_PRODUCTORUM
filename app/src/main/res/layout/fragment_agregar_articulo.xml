<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
     >


   <EditText
       android:id="@+id/editTextTextNombre"
       android:layout_width="274dp"
       android:layout_height="49dp"
       android:layout_marginStart="66dp"
       android:layout_marginTop="30dp"
       android:layout_marginEnd="70dp"
       android:ems="10"
       android:hint="Nombre"
       android:padding="5dp"
       android:background="@color/Wheat"
       android:inputType="textPersonName"
       android:text=""
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView4" />

   <EditText
       android:id="@+id/edittextPrecio"
       android:layout_width="279dp"
       android:layout_height="58dp"
       android:layout_marginStart="66dp"
       android:layout_marginEnd="65dp"
       android:layout_marginBottom="15dp"
       android:ems="10"
       android:hint="Precio"
       android:padding="5dp"
       android:inputType="numberDecimal|number"
       android:background="@color/Wheat"
       app:layout_constraintBottom_toTopOf="@+id/btnAgregar"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Button
       android:id="@+id/btnAgregar"
       android:layout_width="155dp"
       android:layout_height="60dp"
       android:layout_marginStart="134dp"
       android:layout_marginEnd="121dp"
       android:layout_marginBottom="28dp"
       android:backgroundTint="@color/LightSkyBlue"
       android:text="Agregar"
       android:textSize="22dp"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="1.0"
       app:layout_constraintStart_toStartOf="parent" />

   <EditText
       android:id="@+id/editTextDescripcion"
       android:layout_width="278dp"
       android:layout_height="65dp"
       android:layout_marginStart="63dp"
       android:layout_marginEnd="69dp"
       android:layout_marginBottom="24dp"
       android:ems="10"
       android:padding="5dp"
       android:background="@color/Wheat"
       android:hint="Descripcion"
       android:inputType="textPersonName"
       app:layout_constraintBottom_toTopOf="@+id/imageView2"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <Spinner
       android:id="@+id/spinnerCategoria"
       android:layout_width="277dp"
       android:layout_height="48dp"
       android:layout_marginTop="25dp"
       android:layout_marginBottom="27dp"
       android:contentDescription="@string/google_app_id"
       android:padding="5dp"
       android:background="@drawable/back_border"
       android:popupBackground="@color/AliceBlue"
       app:layout_constraintBottom_toTopOf="@+id/editTextDescripcion"
       app:layout_constraintEnd_toEndOf="@+id/editTextTextNombre"
       app:layout_constraintStart_toStartOf="@+id/editTextTextNombre"
       app:layout_constraintTop_toBottomOf="@+id/editTextTextNombre" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="17dp"
       android:layout_marginTop="53dp"
       android:layout_marginEnd="215dp"
       android:layout_marginBottom="15dp"
       android:background="@color/colorPrimary"
       android:padding="5dp"
       android:rotation="-33"
       android:rotationX="0"
       android:rotationY="0"
       android:text="Agregar articulo"
       android:textSize="16dp"
       app:layout_constraintBottom_toTopOf="@+id/editTextTextNombre"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintVertical_bias="0.0" />

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="278dp"
       android:layout_height="190dp"
       android:layout_marginStart="63dp"
       android:layout_marginEnd="69dp"
       android:layout_marginBottom="30dp"
       app:layout_constraintBottom_toTopOf="@+id/edittextPrecio"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:background="@color/AliceBlue"
       app:srcCompat="@drawable/articulos" />

</androidx.constraintlayout.widget.ConstraintLayout>
